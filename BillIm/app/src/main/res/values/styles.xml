<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#d7ccc8</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark"> #a1887f </item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#6d4c41</item>
        <item name="colorControlActivated">#6d4c41</item>
        <item name="colorControlNormal">#6d4c41</item>
        <item name="colorControlHighlight">#6d4c41</item>
        <item name="colorSwitchThumbNormal">#6d4c41</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
    </style>
    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#d7ccc8</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark"> #a1887f </item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#6d4c41</item>
        <item name="colorControlActivated">#6d4c41</item>
        <item name="colorControlNormal">#6d4c41</item>
        <item name="colorControlHighlight">#6d4c41</item>
        <item name="colorSwitchThumbNormal">#6d4c41</item>

    </style>
</resources>
